generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  jerseyNumber  Int
  position      String
  active        Boolean   @default(true)
  tests         Test[]
}

model Test {
  id            Int       @id @default(autoincrement())
  startTime     DateTime
  endTime       DateTime
  shots         Int
  made          Int
  playerId      Int
  player        Player    @relation(fields: [playerId], references: [id])
  testType      String    @default("standard")
  zoneStats     ZoneStat[]
}

model ZoneStat {
  id            Int       @id @default(autoincrement())
  testId        Int
  test          Test      @relation(fields: [testId], references: [id])
  zone          String
  made          Int
  shots         Int
}